<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/create_new_config"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="新建的UpdateConfig做更新默认配置"
                app:title="使用单独的更新配置。" />

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/download_worker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="使用okhttp作为下载任务"
                app:title="选择下载apk网络任务" />

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/update_strategy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="使用所有通知全部显示的策略"
                app:title="选择使用的更新策略" />

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/has_update_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="定制在通知栏显示新更新消息通知"
                app:title="选择检查到有更新时的弹窗提示" />

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/file_creator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="使用定制的文件路径进行下载"
                app:title="选择更新时的apk的缓存文件创建器" />

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/download_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="定制在通知栏进度条提示"
                app:title="选择下载进度条显示方式" />

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/check_worker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="使用okhttp作为检查网络任务"
                app:title="选择检查更新网络任务" />

            <com.jason.framework.updateplugin.widget.CheckedView
                android:id="@+id/download_complete_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:subtitle="定制在通知栏显示下载完成消息通知"
                app:title="选择下载完成后的弹窗提示">

            </com.jason.framework.updateplugin.widget.CheckedView>

            <Button
                android:id="@+id/start_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start_update" />

            <Button
                android:id="@+id/start_daemon_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_daemon_update" />

            <Button
                android:id="@+id/stop_daemon_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止后台任务" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
