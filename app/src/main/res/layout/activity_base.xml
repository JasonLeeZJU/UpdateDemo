<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/start_update"
        android:text="@string/start_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_background_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_background_update" />

    <Button
        android:id="@+id/stop_background_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_background_update" />

</LinearLayout>